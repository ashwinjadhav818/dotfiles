:root {
    --backgroundcol: #100d0e;
    --foregroundcol: #c3c2c2;
    --cursorcol: #c3c2c2;
    --colors0: #100d0e;
    --colors1: #5B636E;
    --colors2: #646A74;
    --colors3: #956A2B;
    --colors4: #D7A745;
    --colors5: #6D7686;
    --colors6: #4755C7;
    --colors7: #c3c2c2;
    --colors8: #6b5862;
    --colors9: #5B636E;
    --colors10: #646A74;
    --colors11: #956A2B;
    --colors12: #D7A745;
    --colors13: #6D7686;
    --colors14: #4755C7;
    --colors15: #c3c2c2;
}

* {
    font-size: 12px;
    color: var(--foregroundcol);
    font-weight: 600;
    font-family: "SegoeUI Nerd Font";
    margin: 0;
    padding: 0;
}

.yasb-bar {
    padding: 0;
    margin: 0;
}

.container-right {
    padding: 0 8px;
}

.widget {
    padding: 0 12px;
    margin: 0;
}

.icon {
    font-size: 16px;
}

.widget .label {
    padding: 0px 2px;
}

.apps-widget {
    padding: 0 4px 0 2px;
}

.komorebi-active-layout {
    padding: 0 4px 0 0;
}

.komorebi-active-layout .label {
    font-weight: 600;
    padding: 2px 0 0 0;
}

.apps-widget .widget-container,
.komorebi-workspaces .widget-container,
.komorebi-active-layout .widget-container,
.glazewm-workspaces .glazewm-tiling-direction {
    background-color: var(--backgroundcol);
    margin: 4px 0 4px 0;
    border-radius: 12px;
    border: 0px solid var(--colors1);
}


.komorebi-workspaces {
    border-radius: 14px;
    padding: 0 4px 0 6px;
}

.komorebi-workspaces .offline-status {
    color: var(--colors2);
    font-size: 12px;
    padding: 0 0 0 4px;
    font-weight: 600;
}

.komorebi-workspaces .ws-btn {
    border: none;
    background-color: transparent;
    margin: 0;
    font-size: 12px;
    color: var(--colors3);
    height: 28px;
    width: 18px;
}

.komorebi-workspaces .ws-btn:hover {
    color: var(--colors4);
}

.komorebi-workspaces .ws-btn.populated {
    color: transparent;
    width: 10px;
    height: 10px;
    background-color: var(--colors5);
    border-radius: 5px;
    margin: 0 4px;
    font-size: 1px;
}

.komorebi-workspaces .ws-btn.active {
    color: transparent;
    background-color: var(--colors6);
    width: 36px;
    height: 10px;
    margin: 0 4px;
    border-radius: 5px;
}

.glazewm-workspaces {
    padding: 0 4px;
}

.glazewm-workspaces .offline-status {
    color: var(--colors2);
    font-size: 12px;
    padding: 0 4px;
    font-weight: 600;
}

.glazewm-workspaces .ws-btn {
    font-size: 12px;
    color: var(--foregroundcol);
    padding: 0 4px;
}

.glazewm-workspaces .ws-btn:hover {
    color: var(--colors4);
}

.glazewm-workspaces .ws-btn.populated {
    background-color: var(--colors0);
    border-radius: 5px;
    margin: 0 4px;
}

.glazewm-workspaces .ws-btn.active {
    background-color: var(--colors5);
    color: var(--colors0);
    margin: 0 4px;
    border-radius: 5px;
}

.glazewm-tiling-direction {
    background-color: transparent;
    padding: 0;
    margin: 0;
}

.glazewm-tiling-direction .btn {
    font-size: 14px;
    width: 14px;
    padding: 0 4px 0 4px;
    color: var(--colors6);
    border: none;
}

.glazewm-tiling-direction .btn:hover {
    background-color: #727272;
}

.apps-widget .label {
    font-size: 14px;
    padding: 0 2px;
    color: var(--colors7);
}

.apps-widget .label:hover {
    color: var(--colors8);
}

.uptime {
    font-size: 14px;
    margin-bottom: 10px;
    color: var(--colors2);
    font-weight: 600;

}

.power-menu-widget .label {
    color: var(--colors6);
    font-size: 13px;
}

.power-menu-popup {
    background-color: transparent
}

.power-menu-popup .button {
    padding: 0;
    width: 180px;
    height: 230px;
    border-radius: 8px;
    background-color: var(--colors10);
    color: var(--colors11);
    border-left: 4px solid rgba(58, 59, 83, 0);
    border-right: 4px solid rgba(58, 59, 83, 0);
    border-top: 8px solid rgba(58, 59, 83, 0);
    border-bottom: 8px solid rgba(58, 59, 83, 0);
    margin: 0px;
}

.power-menu-popup .button.hover {
    background-color: var(--colors12);
    border-left: 4px solid var(--colors13);
    border-right: 4px solid var(--colors13);
    border-top: 8px solid var(--colors13);
    border-bottom: 8px solid var(--colors13);
}

.power-menu-popup .button .label {
    margin-bottom: 8px;
    font-size: 16px;
    font-weight: 500;
    color: var(--colors14)
}

.power-menu-popup .button .icon {
    font-size: 64px;
    padding-top: 32px;
    color: var(--colors15)
}

.power-menu-popup .button.cancel .icon {
    padding: 0;
    margin: 0;
}

.power-menu-popup .button.cancel .label {
    color: var(--colors9);
    margin: 0;
}

.power-menu-popup .button.cancel {
    height: 32px;
    border-radius: 4px;
}

.volume-widget .icon {
    color: var(--colors5);
    margin: 1px 2px 0 0;
}

.wifi-widget {
    padding: 30px;
}

.wifi-widget .icon {
    font-size: 14px;
    padding-left: -0px;
    color: var(--colors4);
}

.battery-widget .icon {
    margin-right: 6px;
    color: var(--colors6);
}

.brightness-widget {
    margin-right: -10px;

}

.brightness-widget .icon {
    color: var(--colors5);
}

.weather-widget,
.battery-widget,
.wifi-widget,
.volume-widget,
.brightness-widget {
    padding: 0 6px;
}

.weather-widget .icon {
    font-size: 18px;
    margin: 0 2px 1px 0;
    color: var(--colors12);
}

.wallpapers-widget .icon {
    color: var(--colors13);
    padding: 0 5px;
    font-size: 16px;
    margin: 0;
}

.taskbar-widget {
    padding: 0;
    margin: 0;
    border: none;
}

.taskbar-widget .app-icon {
    padding: 0 6px;
    border: none;
    margin: 0;
}

.whkd-widget {
    padding: 0 6px 0 6px;
}

.whkd-widget .icon {
    font-size: 14px;
}

.wallpapers-widget {
    padding: 0 6px 0 6px;
}

.wallpapers-gallery-window {
    background-color: rgba(85, 42, 240, 0.01);
    border: 0;
    margin: 0;
}

.wallpapers-gallery-buttons {
    background-color: rgba(255, 255, 255, 0);
    color: var(--colors4);
    border: none;
    font-size: 14px;
    padding: 8px 0;
    border-radius: 8px;
    margin: 0 8px 8px 8px;
    width: 600px;
}

.wallpapers-gallery-buttons:hover {
    background-color: rgba(255, 255, 255, 0.1)
}

.wallpapers-gallery-image {
    border: 4px solid transparent;
    border-radius: 10px;

}

.wallpapers-gallery-image:hover {
    border: 4px solid var(--colors6);
}

.wallpapers-gallery-image.focused {
    border: 4px solid var(--colors6);
}

.systray {
    border: none;
    margin-right: -15px;
}

.systray .unpinned-container {
    border-radius: 8px;
    padding: 2px;
}

.systray .pinned-container {
    background: transparent;
    padding: 2px;
}

.systray .button {
    font-size: 16px;
    margin: 0 2px;
}

.systray .button:hover {
    background: var(--colors4);
}

.systray .unpinned-visibility-btn {
    border-radius: 4px;
    height: 20px;
    width: 16px;
    font-size: 26px;
    color: var(--colors6);
    padding: 0;
}

.systray .unpinned-visibility-btn:checked {
    color: var(--foregroundcol);
}

.systray .unpinned-visibility-btn:hover {
    border-radius: 4px;
}

.media-widget {
    margin-right: -16px;
}

.media-widget .btn {
    color: var(--colors4);
    font-size: 16px;
}
