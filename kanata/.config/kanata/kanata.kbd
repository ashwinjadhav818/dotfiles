;; defsrc is still necessary
(defcfg
  process-unmapped-keys true 
  danger-enable-cmd true
)

(defsrc
  esc   f1   f2   f3   f4   f5   f6   f7   f8   f9   f10  f11  f12   prtsc   slck  pause
  grv   1    2    3    4    5    6    7    8    9    0    -    =     bspc    ins home pgup   
  tab   q    w    e    r    t    y    u    i    o    p    [    ]     \       del end  pgdn   
  caps  a    s    d    f    g    h    j    k    l    ;    '     ret                          
  lsft  z    x    c    v    b    n    m    ,    .    /     rsft                   up         
  lctl  lmet lalt           spc               ralt  rmet  rctl             left  down  right 
)

(defvar
  tap-time 150 
  hold-time 200
)

(defalias
  ;; REMAPS
  cap (tap-hold $tap-time $hold-time esc caps)
  ent (tap-hold $tap-time $hold-time ' enter)

  ;; HOME ROW MODS
  a (tap-hold $tap-time $hold-time a lalt)
  s (tap-hold $tap-time $hold-time s lsft)
  d (tap-hold $tap-time $hold-time d lctl)
  f (tap-hold $tap-time $hold-time f lmet)

  j (tap-hold $tap-time $hold-time j lmet)
  k (tap-hold $tap-time $hold-time k rctl)
  l (tap-hold $tap-time $hold-time l rsft)
  ; (tap-hold $tap-time $hold-time ; lalt)

  ;; LAYERS 
  bse (layer-switch base)
  mni (layer-toggle manipulation)
  med (layer-toggle media)
  sys (layer-toggle system)

  ;; MEDIA SHORT ALIASES
  mvu (cmd "C:\\Users\\Ashwin\\scoop\\apps\\nircmd\\current\\nircmd.exe" "sendkeypress" "0xAF") ;; Volume Up
  mvd (cmd "C:\\Users\\Ashwin\\scoop\\apps\\nircmd\\current\\nircmd.exe" "sendkeypress" "0xAE") ;; Volume Down
  mmt (cmd "C:\\Users\\Ashwin\\scoop\\apps\\nircmd\\current\\nircmd.exe" "mutesysvolume" "2")   ;; Mute
  mnx (cmd "C:\\Users\\Ashwin\\scoop\\apps\\nircmd\\current\\nircmd.exe" "sendkeypress" "0xB0") ;; Next
  mpr (cmd "C:\\Users\\Ashwin\\scoop\\apps\\nircmd\\current\\nircmd.exe" "sendkeypress" "0xB1") ;; Prev
  mps (cmd "C:\\Users\\Ashwin\\scoop\\apps\\nircmd\\current\\nircmd.exe" "sendkeypress" "0xB2") ;; Stop
  mpp (cmd "C:\\Users\\Ashwin\\scoop\\apps\\nircmd\\current\\nircmd.exe" "sendkeypress" "0xB3") ;; Play/Pause
    
  ;; BRIGHTNESS ALIASES 
  bru (cmd "C:\\Users\\Ashwin\\scoop\\apps\\nircmd\\current\\nircmd.exe" "changebrightness" "10") ;; Brightness Up 
  brd (cmd "C:\\Users\\Ashwin\\scoop\\apps\\nircmd\\current\\nircmd.exe" "changebrightness" "-10") ;; Brightness Down
)

