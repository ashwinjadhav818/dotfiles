{
    "layer": "top",
    "position": "top",
    "height": 35,
    "margin-top": 8,
    "margin-left": 8,
    "margin-right": 8,
    "margin-bottom": 0,
    "reload_style_on_change": true,
    "modules-left": [
        "custom/user-menu",
        "hyprland/workspaces",
        "hyprland/window"
    ],
    "modules-center": [
        "custom/org-clock"
    ],
    "modules-right": [
        "group/expand",
        "power-profiles-daemon",
        "backlight",
        "battery",
        "pulseaudio",
        "network",
        "clock",
        "custom/notification",
        "custom/power"
    ],
    "custom/user-menu": {
        "format": "Óüô",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "~/.config/waybar/res/user_menu.xml",
        "menu-actions": {
            "user": "foot -H fastfetch",
            "home": "xdg-open $HOME",
            "desktop": "xdg-open $HOME/Desktop",
            "documents": "xdg-open $HOME/Documents",
            "pictures": "xdg-open $HOME/Pictures",
            "videos": "xdg-open $HOME/Videos",
            "downloads": "xdg-open $HOME/Downloads",
            "music": "xdg-open $HOME/Music"
        }
    },
    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {
            "active": " ",
            "default": " ",
            "empty": " "
        },
        "persistent-workspaces": {
            "*": [
                1,
                2,
                3,
                4
            ]
        }
    },
    "hyprland/window": {
        "max-length": 80,
        "icon": true,
        "icon-size": 16
    },
    "custom/notification": {
        "tooltip": false,
        "format": "\uf0f3",
        "on-click": "swaync-client -t -sw",
        "escape": true
    },
    "clock": {
        "format": "{:%I:%M %p}",
        "interval": 1,
        "tooltip-format": "<tt>{calendar}</tt>",
        "actions": {
            "on-click-right": "shift_down",
            "on-click": "shift_up"
        }
    },
    "network": {
        "format-wifi": "Û∞§®",
        "format-ethernet": "",
        "format-disconnected": "Ó¨Å",
        "format-icons": [
            "Û∞§Ø",
            "Û∞§ü",
            "Û∞§¢",
            "Û∞§•",
            "Û∞§®"
        ],
        "tooltip-format-disconnected": "Error",
        "tooltip-format-wifi": "{essid} ({signalStrength}%) Û∞§®",
        "tooltip-format-ethernet": "{ifname} üñß ",
        "on-click": "~/.config/scripts/nm-rofi"
    },
    "bluetooth": {
        "format-on": "Û∞ÇØ ",
        "format-off": "BT-off",
        "format-disabled": "Û∞Ç≤",
        "format-connected-battery": "{device_battery_percentage}% Û∞ÇØ",
        "format-alt": "{device_alias}Û∞ÇØ",
        "tooltip-format": "{controller_alias}\t{controller_address}\n\n{num_connections} connected",
        "tooltip-format-connected": "{controller_alias}\t{controller_address}\n\n{num_connections} connected\n\n{device_enumerate}",
        "tooltip-format-enumerate-connected": "{device_alias}\n{device_address}",
        "tooltip-format-enumerate-connected-battery": "{device_alias}\n{device_address}\n{device_battery_percentage}%",
        "on-click-right": "blueman-manager"
    },
    "battery": {
        "interval": 1,
        "states": {
            "good": 95,
            "warning": 30,
            "critical": 20
        },
        "format": "{icon} {capacity}%",
        "format-charging": "Û∞ÇÑ {capacity}%",
        "format-plugged": "Û∞ÇÑ Ó¨≠ {capacity}%",
        "format-alt": "{icon} {time}",
        "format-icons": [
            "Û∞Åª",
            "Û∞Åº",
            "Û∞Åæ",
            "Û∞ÇÄ",
            "Û∞ÇÇ",
            "Û∞Åπ"
        ]
    },
    "pulseaudio": {
        "format": "{icon} {volume}%",
        "format-bluetooth": "{volume}% {icon}Ôäî {format_source}",
        "format-bluetooth-muted": "Ôë¶ {icon}Ôäî {format_source}",
        "format-muted": "Ôë¶ ",
        "format-source": "{volume}% ÔÑ∞",
        "format-source-muted": "ÔÑ±",
        "format-icons": {
            "headphone": "ÔÄ•",
            "hands-free": "Ôñê",
            "headset": "Ôñê",
            "phone": "ÔÇï",
            "portable": "ÔÇï",
            "car": "ÔÜπ",
            "default": [
                "ÔÄ¶",
                "ÔÄß",
                "ÔÄ®"
            ]
        },
        "on-click": "pavucontrol"
    },
    "backlight": {
        "format": "{icon} {percent}%",
        "format-icons": [
            "ÔÉ´",
            "Û±©é",
            "Û±©è",
            "Û±©ê",
            "Û±©ë",
            "Û±©í",
            "Û±©ì",
            "Û±©î",
            "Û±©ï",
            "Û±©ñ",
            "Û∞õ®"
        ]
    },
    "custom/power": {
        "format": "Û∞ê•",
        "tooltip": false,
        "menu": "on-click",
        "menu-file": "$HOME/.config/waybar/res/power_menu.xml",
        "menu-actions": {
            "shutdown": "systemctl poweroff",
            "reboot": "systemctl reboot",
            "lock": "hyprlock",
            "suspend": "systemctl suspend"
        }
    },
    "power-profiles-daemon": {
        "format": "{icon}",
        "tooltip-format": "Power profile: {profile}\nDriver: {driver}",
        "tooltip": true,
        "format-icons": {
            "default": "ÔÉß",
            "performance": "ÔÉß",
            "balanced": "Ôâé",
            "power-saver": "ÔÅ¨"
        }
    },
    "custom/expand": {
        "format": "ÔÑÑ",
        "tooltip": false
    },
    "custom/endpoint": {
        "format": " ",
        "tooltip": false
    },
    "group/expand": {
        "orientation": "horizontal",
        "drawer": {
            "transition-duration": 600,
            "transition-to-left": true,
            "click-to-reveal": true
        },
        "modules": [
            "custom/expand",
            "tray",
            "custom/endpoint"
        ]
    },
    "tray": {
        "icon-size": 14,
        "spacing": 10
    },
    "custom/org-clock": {
        "exec": "~/.config/scripts/org-clock-task.sh",
        "interval": 60,
        "return-type": "text",
        "tooltip": false
    }
}
